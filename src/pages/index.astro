        </div>
      </div>
    </section>

    <!-- Weekly Events Section -->
    <section id="weekly" class="py-16 bg-gray-50 dark:bg-gray-800/50">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
              üîÑ Eventos Semanales
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400">
              Spotlight Hours, Raid Hours y Max Mondays
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Spotlight Hours -->
            <div>
              <h3
                class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center"
              >
                <span class="w-3 h-3 bg-yellow-500 rounded-full mr-3"></span>
                Spotlight Hour
                <span class="ml-auto text-sm font-normal text-gray-500"
                  >Mar 18:00-19:00</span
                >
              </h3>
              <div class="space-y-3">
                {
                  spotlightHours.map((event) => (
                    <div
                      class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 border-l-4 border-yellow-500 hover:shadow-lg transition-shadow cursor-pointer"
                      data-event-id={event.id}
