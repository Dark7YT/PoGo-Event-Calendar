                Mostrando <span
                  id="filtered-count"
                  class="font-bold text-blue-600 dark:text-blue-400">0</span
                > de <span id="total-count" class="font-bold">0</span> eventos
              </p>
              <button
                id="clear-filters-btn"
                class="text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors"
              >
                Limpiar filtros
              </button>
            </div>
          </div>

          {
            activeEvents.length > 0 && (
              <div
                class="mb-10 sm:mb-12 events-container"
                data-section="active"
              >
                <h3 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-4 sm:mb-6 flex items-center">
                  <span class="w-2.5 h-2.5 sm:w-3 sm:h-3 bg-green-500 rounded-full mr-2 sm:mr-3 animate-pulse" />
                  Eventos Activos
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4 sm:gap-6 events-grid">
                  {activeEvents.map((event) => (
                    <div
                      class="event-card-wrapper"
                      data-event-category={event.category}
                      data-event-status={event.status}
                      data-event-title={event.title.toLowerCase()}
                      data-event-data={JSON.stringify(event)}
                    >
                      <EventCard event={event} />
                    </div>
                  ))}
                </div>
              </div>
            )
          }

          <div class="events-container" data-section="upcoming">
            <h3
              class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-4 sm:mb-6 flex items-center"
            >
              <svg
                class="w-5 h-5 sm:w-6 sm:h-6 mr-2 sm:mr-3 text-blue-500 flex-shrink-0"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Pr√≥ximos Eventos
            </h3>
            <div
              class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 events-grid"
            >
              {
                upcomingEvents.map((event) => (
                  <div
                    class="event-card-wrapper"
                    data-event-category={event.category}
                    data-event-status={event.status}
                    data-event-title={event.title.toLowerCase()}
                    data-event-data={JSON.stringify(event)}
                  >
                    <EventCard event={event} />
                  </div>
                ))
              }
            </div>
          </div>

          <!-- No Results Message -->
          <div id="no-results" class="hidden text-center py-12">
            <svg
              class="w-16 h-16 mx-auto text-gray-400 dark:text-gray-600 mb-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
            <h3
              class="text-xl font-semibold text-gray-700 dark:text-gray-300 mb-2"
            >
              No se encontraron eventos
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              Intenta ajustar los filtros o la b√∫squeda
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Raids Section -->
    <section id="raids" class="py-16 bg-white dark:bg-gray-900">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
              ‚öîÔ∏è Rotaciones de Raids
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400">
              Todas las rotaciones de raids del mes
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Tier 5 -->
            <div
              class="bg-gradient-to-br from-yellow-400 to-orange-500 rounded-xl shadow-lg p-6 text-white"
            >
              <h3 class="text-2xl font-bold mb-4 flex items-center">
                <span class="text-3xl mr-2">‚≠ê</span>
                Tier 5
              </h3>
              <div class="space-y-3">
                {
                  raidRotations
                    .filter((r) => r.category === "RAID_ROTATION")
                    .map((raid) => (
                      <div class="bg-white/20 backdrop-blur-sm rounded-lg p-3">
                        <p class="font-bold">{raid.title}</p>
                        <p class="text-sm opacity-90">
                          {raid.description || "Rotaci√≥n activa"}
                        </p>
                      </div>
                    ))
                }
              </div>
            </div>

            <!-- Mega -->
            <div
              class="bg-gradient-to-br from-purple-500 to-pink-500 rounded-xl shadow-lg p-6 text-white"
            >
              <h3 class="text-2xl font-bold mb-4 flex items-center">
                <span class="text-3xl mr-2">üíé</span>
                Mega Raids
              </h3>
              <div class="space-y-3">
                {
                  raidRotations
                    .filter((r) => r.category === "MEGA_ROTATION")
                    .map((raid) => (
                      <div class="bg-white/20 backdrop-blur-sm rounded-lg p-3">
                        <p class="font-bold">{raid.title}</p>
                        <p class="text-sm opacity-90">
                          {raid.description || "Rotaci√≥n activa"}
                        </p>
                      </div>
                    ))
                }
              </div>
            </div>

            <!-- Shadow -->
            <div
              class="bg-gradient-to-br from-gray-700 to-gray-900 rounded-xl shadow-lg p-6 text-white"
            >
              <h3 class="text-2xl font-bold mb-4 flex items-center">
                <span class="text-3xl mr-2">üë§</span>
                Shadow Raids
              </h3>
              {
                raidRotations
                  .filter((r) => r.category === "SHADOW_ROTATION")
                  .map((raid) => (
                    <div class="bg-white/10 backdrop-blur-sm rounded-lg p-3 mb-3">
