---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Calendar from "../components/Calendar.astro";
import EventCard from "../components/EventCard.astro";
import EventModal from "../components/EventModal.astro";
import {
  calendarDataset,
  getEventsByCategory,
  getAllEvents,
} from "../data/events";
import { parseISO } from "date-fns";

// Obtener todos los eventos (incluye children eventos)
const allEvents = getAllEvents();

// Ordenar eventos por fecha
const sortedEvents = [...allEvents].sort(
  (a, b) => parseISO(a.start).getTime() - parseISO(b.start).getTime()
);

// Separar eventos activos y pr√≥ximos
const now = new Date();
const activeEvents = sortedEvents.filter(
  (e) => parseISO(e.start) <= now && parseISO(e.end) >= now
);
const upcomingEvents = sortedEvents.filter((e) => parseISO(e.start) > now);

// Eventos por categor√≠a
const spotlightHours = getEventsByCategory("SPOTLIGHT");
const raidHours = getEventsByCategory("RAID_HOUR");
const maxMondays = getEventsByCategory("MAX_MONDAY");

// Rotaciones
const raidRotations = calendarDataset.filter(
  (e) =>
    e.category === "RAID_ROTATION" ||
    e.category === "MEGA_ROTATION" ||
    e.category === "SHADOW_ROTATION"
);
