<script>
  // ============================================
  // EVENT FILTERS FUNCTIONALITY
  // Nota: Los filtros SOLO afectan las tarjetas de eventos
  // en la secci√≥n "Eventos Principales" (#events)
  // El calendario es completamente independiente
  // ============================================
  function initEventFilters() {
    let currentCategoryFilter = "all";
    let currentStatusFilter = "all";
    let currentSearchQuery = "";

    // Get all event cards ONLY from the events section (not calendar)
    const eventCards = document.querySelectorAll("#events .event-card-wrapper");
    const totalCount = eventCards.length;
    const totalCountEl = document.getElementById("total-count");
    const filteredCountEl = document.getElementById("filtered-count");
    const noResultsEl = document.getElementById("no-results");

    // Get filter buttons
    const categoryButtons = document.querySelectorAll(".filter-category-btn");
    const statusButtons = document.querySelectorAll(".filter-status-btn");
    const searchInput = document.getElementById(
      "event-search"
    ) as HTMLInputElement;
    const clearFiltersBtn = document.getElementById("clear-filters-btn");

    // Set initial counts
    if (totalCountEl) totalCountEl.textContent = totalCount.toString();
    if (filteredCountEl) filteredCountEl.textContent = totalCount.toString();

    // Filter function
    function applyFilters() {
      let visibleCount = 0;

      eventCards.forEach((card) => {
        const category = card.getAttribute("data-event-category") || "";
        const status = card.getAttribute("data-event-status") || "";
        const title = card.getAttribute("data-event-title") || "";
        const eventData = card.getAttribute("data-event-data") || "{}";

        let eventFullText = title;
        try {
          const data = JSON.parse(eventData);
          // Include spawns, raids, bonuses, etc in search
          if (data.spawns) eventFullText += " " + data.spawns.join(" ");
          if (data.raids) eventFullText += " " + data.raids.join(" ");
          if (data.bonuses) eventFullText += " " + data.bonuses.join(" ");
          if (data.featuredMoves)
            eventFullText += " " + data.featuredMoves.join(" ");
          if (data.description) eventFullText += " " + data.description;
          eventFullText = eventFullText.toLowerCase();
        } catch (e) {
          // Continue with just title
        }

        // Check filters
        const matchesCategory =
          currentCategoryFilter === "all" || category === currentCategoryFilter;
        const matchesStatus =
          currentStatusFilter === "all" || status === currentStatusFilter;
        const matchesSearch =
          currentSearchQuery === "" ||
          eventFullText.includes(currentSearchQuery.toLowerCase());

        const shouldShow = matchesCategory && matchesStatus && matchesSearch;

        if (shouldShow) {
          card.classList.remove("hidden");
          visibleCount++;
        } else {
          card.classList.add("hidden");
        }
      });

      // Update count
      if (filteredCountEl)
        filteredCountEl.textContent = visibleCount.toString();

      // Show/hide no results message
      if (noResultsEl) {
        if (visibleCount === 0) {
          noResultsEl.classList.remove("hidden");
        } else {
          noResultsEl.classList.add("hidden");
        }
      }

      // Show/hide section titles if all events in a section are hidden
      // Only affects events section, NOT calendar
      const sections = document.querySelectorAll("#events .events-container");
      sections.forEach((section) => {
        const sectionCards = section.querySelectorAll(
          ".event-card-wrapper:not(.hidden)"
        );
        if (sectionCards.length === 0) {
          section.classList.add("hidden");
        } else {
          section.classList.remove("hidden");
        }
      });
    }

    // Category filter buttons
    categoryButtons.forEach((btn) => {
      btn.addEventListener("click", () => {
        // Update active state
        categoryButtons.forEach((b) => b.classList.remove("active"));
        btn.classList.add("active");

        // Update filter
        currentCategoryFilter = btn.getAttribute("data-category") || "all";
        applyFilters();
      });
    });

    // Status filter buttons
    statusButtons.forEach((btn) => {
      btn.addEventListener("click", () => {
        // Update active state
        statusButtons.forEach((b) => b.classList.remove("active"));
        btn.classList.add("active");

        // Update filter
        currentStatusFilter = btn.getAttribute("data-status") || "all";
        applyFilters();
      });
    });

    // Search input
    if (searchInput) {
      searchInput.addEventListener("input", (e) => {
        currentSearchQuery = (e.target as HTMLInputElement).value;
        applyFilters();
      });
    }

    // Clear filters button
    if (clearFiltersBtn) {
      clearFiltersBtn.addEventListener("click", () => {
        // Reset filters
        currentCategoryFilter = "all";
        currentStatusFilter = "all";
        currentSearchQuery = "";

        // Reset UI
        categoryButtons.forEach((btn) => {
          if (btn.getAttribute("data-category") === "all") {
            btn.classList.add("active");
          } else {
            btn.classList.remove("active");
          }
        });

        statusButtons.forEach((btn) => {
          if (btn.getAttribute("data-status") === "all") {
            btn.classList.add("active");
          } else {
            btn.classList.remove("active");
          }
        });

        if (searchInput) {
          searchInput.value = "";
        }

        applyFilters();
      });
    }
  }

  // Initialize filters
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initEventFilters);
  } else {
    initEventFilters();
  }

  // Re-initialize on Astro page transitions
  document.addEventListener("astro:page-load", initEventFilters);

  // ============================================
  // EXISTING EVENT CLICK HANDLERS
  // ============================================
  // Agregar click listeners a los eventos semanales y tarjetas
  document.addEventListener("DOMContentLoaded", () => {
    // Eventos semanales (Spotlight, Raid Hours, Max Monday)
    const weeklyEventCards = document.querySelectorAll("[data-event-id]");
    weeklyEventCards.forEach((card) => {
      card.addEventListener("click", () => {
        const eventId = card.getAttribute("data-event-id");
        if (eventId) {
          const event = new CustomEvent("event-selected", {
            detail: { eventId },
          });
          document.dispatchEvent(event);
        }
      });
    });

    // EventCards (eventos principales)
    document.addEventListener("click", (e: Event) => {
      const target = e.target as HTMLElement;
      if (!target) return;

      const eventCard = target.closest("article[data-event-id]");
      if (eventCard) {
        const eventId = eventCard.getAttribute("data-event-id");
        if (eventId) {
          const event = new CustomEvent("event-selected", {
            detail: { eventId },
          });
          document.dispatchEvent(event);
        }
      }
    });
  });
</script>

