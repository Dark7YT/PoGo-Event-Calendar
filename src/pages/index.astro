              </div>
            </div>

            <!-- Raid Hours -->
            <div>
              <h3
                class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center"
              >
                <span class="w-3 h-3 bg-purple-500 rounded-full mr-3"></span>
                Raid Hour
                <span class="ml-auto text-sm font-normal text-gray-500"
                  >Mi√© 18:00-19:00</span
                >
              </h3>
              <div class="space-y-3">
                {
                  raidHours.map((event) => (
                    <div
                      class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 border-l-4 border-purple-500 hover:shadow-lg transition-shadow cursor-pointer"
                      data-event-id={event.id}
                    >
                      <p class="font-semibold text-gray-900 dark:text-white">
                        {event.title}
                      </p>
                      <p class="text-gray-700 dark:text-gray-300 text-sm">
                        {event.description}
                      </p>
                    </div>
                  ))
                }
              </div>
