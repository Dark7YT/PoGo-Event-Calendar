---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Tu fuente confiable para eventos de PokÃ©mon GO - Calendario completo, detalles de eventos y mÃ¡s",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="apple-touch-icon" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Theme handling script - runs before page load -->
    <script is:inline>
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      if (theme === "light") {
        document.documentElement.classList.remove("dark");
      } else {
        document.documentElement.classList.add("dark");
      }
      window.__theme = theme;
    </script>
  </head>
  <body
    class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-200"
  >
    <slot />

    <script is:inline>
      // Theme toggle functionality
      function initThemeToggle() {
        console.log("ðŸŽ¨ Inicializando theme toggle...");
        const themeToggle = document.getElementById("theme-toggle");
        console.log("ðŸ” BotÃ³n encontrado:", themeToggle);

        if (themeToggle) {
          // Remove any existing listeners
          const newToggle = themeToggle.cloneNode(true);
          themeToggle.parentNode.replaceChild(newToggle, themeToggle);
          console.log("âœ… BotÃ³n clonado y reemplazado");

          newToggle.addEventListener("click", () => {
            console.log("ðŸ–±ï¸ Click detectado en theme toggle");
            const isDark = document.documentElement.classList.contains("dark");
            console.log("ðŸŒ“ Estado actual:", isDark ? "OSCURO" : "CLARO");

            if (isDark) {
              document.documentElement.classList.remove("dark");
              localStorage.setItem("theme", "light");
              console.log("â˜€ï¸ Cambiado a modo CLARO");
            } else {
              document.documentElement.classList.add("dark");
              localStorage.setItem("theme", "dark");
              console.log("ðŸŒ™ Cambiado a modo OSCURO");
            }
            console.log(
              "ðŸ“¦ Tema guardado en localStorage:",
              localStorage.getItem("theme")
            );
          });
          console.log("ðŸ‘‚ Event listener agregado");
        } else {
          console.error("âŒ No se encontrÃ³ el botÃ³n theme-toggle");
        }
      }

      // Run when DOM is ready
      console.log("ðŸ“„ Estado del documento:", document.readyState);
      if (document.readyState === "loading") {
        console.log("â³ Esperando DOMContentLoaded...");
        document.addEventListener("DOMContentLoaded", initThemeToggle);
      } else {
        console.log("âœ¨ DOM ya estÃ¡ listo, inicializando...");
        initThemeToggle();
      }

      // Run on Astro page transitions
      document.addEventListener("astro:page-load", () => {
        console.log("ðŸ”„ Astro page-load detectado");
        initThemeToggle();
      });
    </script>
  </body>
</html>
